# file: roles/nginx/tasks/modules/google_perftools_module.yml
# configure flag: --with-google_perftools_module


## For DEBIAN nodes
- name: google_perftools_module | make sure libgoogle-perftools-dev package is installed
  apt:
    pkg: libgoogle-perftools-dev
    state: present
  when: ansible_os_family == 'Debian'
